<div class="container">
  <h5 class="bg-light text-dark text-center" style="width:20%">
    新規会員登録
  </h5>

　<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <table class="table table-borderless">
      <tbody>
        <tr>
          <td style="width:20%">名前</td>
          <td class="form-inline">
            (姓)&emsp;&emsp;
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>&emsp;
            (名)&emsp;&emsp;
            <%= f.text_field :first_name, autocomplete: "first_name" %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td class="form-inline">
            (セイ)&emsp;
            <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>&emsp;
            (メイ)&emsp; 
            <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>&emsp;&emsp;&emsp;&nbsp;
            <%= f.email_field :email, autocomplete: "email" %>
          </td>
        </tr>        
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td>&emsp;&emsp;&emsp;&nbsp;
            <%= f.text_field :postal_code %>
          </td>
        </tr>          
        <tr>
          <td>住所</td>
          <td>&emsp;&emsp;&emsp;&nbsp;
            <%= f.text_field :address, :size=>"60", autocomplete: "address" %>
          </td>
        </tr>           
        <tr>
          <td>電話番号(ハイフンなし)</td>
          <td>&emsp;&emsp;&emsp;&nbsp;
            <%= f.text_field :phone_number, autocomplete: "phone_number" %>
          </td>
        </tr>            
        <tr>
          <td>パスワード
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>            
          </td>
          <td>&emsp;&emsp;&emsp;&nbsp;
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td>&emsp;&emsp;&emsp;&nbsp;
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
      </tbody>
    </table>
    
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-2"><%= f.submit "新規登録", class: 'btn btn-success btn-sm btn-block' %></div>
    </div><br>
        
  <% end %>
  
  <h5 class="bg-light text-dark text-center" style="width:30%">
    すでに登録済みの方
  </h5>
  
  <h6>
    <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
  </h6>
    
</div>