<h1>配送先編集画面</h1>

<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
  <table class="new-form-table">
    <tbody>
      <tr>
        <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label :"住所" %></th>
        <td><%= f.text_field :address, class: "col-xs-7 form-control-static address" %></td>
      </tr>
      <tr>
        <th><%= f.label :"宛名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th> </th>
        <td><%= f.submit '編集する' ,class: "col-xs-2 pull-right btn-lg btn-success " %></td>
      </tr>
    </tbody>
  </table>
<% end %>