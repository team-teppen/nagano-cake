<div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= render 'genre_search', genres: @genres %>
      </div>
    </div>

    <div class="col-9">

        <div class="row">
          <h2 class="px-3">
            <% if params[:genre_id] %>
              <%= @genre.name %>
            <% else %>
              すべての商品
            <% end %>
          </h2>
        </div>

        <div class="row my-3 ml-1">
          <strong>
            全
            <% if params[:genre_id] %>
              <%= @items.order(created_at: :desc).where(is_active: "販売可").count %>
            <% else %>
              <%= Item.where(is_active: "販売可").count %>
            <% end %>
            件
          </strong>
        </div>

        <div class ="row">
          <% @items.each do |item| %>
          <div class="col-mt-3">
            <%= link_to item_path(item) do %>
              <%= image_tag item.get_image, size: "100x100" %>
            <% end %><br>
            <span class="text-muted"><%= link_to item.genre.name, item_path(item.genre_id) %></span><br>
		        <strong class="red-border"><%= item.name %></strong><br>
		        <span class="ml-auto"><%= (item.price * 1.1).floor %>円</span><br>
		        <!--後に詳細ページに記載-->
		        <%= render 'form', cart_item: @cart_item, item: item %>
          </div>
          <% end %>
        </div>
    </div>

    <div class="container">
      <div class="row">
	       <div class="col-md-4 offset-md-4 py-2 mt-5">
	 	      <%= paginate @items %>
	       </div>
	     </div>
    </div>
</div>