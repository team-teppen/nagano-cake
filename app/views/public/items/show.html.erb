<div class="container my-5">
  <div class="row">
    <div class="col-mt-4">
      <%= render 'genre_search', genres: @genre %>
    </div>

    <div class="col-9 my-3">
      <div class="row">
        <div class="col-5">
          <%= image_tag @item.get_image, size: "300x200" %>
        </div>
        <div class="col-5">
          <div class="row">
            <h4 class="font-weight-bold"><%= @item.name %></h4>
          </div>
          <div class="font-weight-bold col col-lg-12">
            <%= @item.introduction %>
          </div>
          <div class="row">
            <div class="px-4 mb-md-5 mt-lg-5">
              ￥<%= (@item.price * 1.1).floor %>(税込)
            </div>
          </div>
        </div>
        <div class="row ml-xl-5">
          <div class="offset-6 ml-xl-5">
            <div class="row ml-xl-5">
              <%= render 'form', cart_item: @cart_item, item: @item %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>