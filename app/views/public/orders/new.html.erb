<h2>注文情報入力</h2>

<%= form_with model: @order, url: confirm_orders_path, method: :post do |f| %>
  支払方法
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

  配送先
  <%= f.radio_button :select_adress, 0 %>
  <%= f.label :select_adress, "ご自身の住所" %>
  <%= f.label :select_adress, current_customer.address_display %>
  <%= f.label :select_adress, current_customer.customer_name %>


  <% if current_customer.addresses.exists? %>
  <%= f.radio_button :select_adress, 1 %>
  <%= f.label :select_adress, "登録先住所から選択" %>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  <% end %>

  <%= f.radio_button :select_adress, 2 %>
  <%= f.label :select_adress, "新しいお届け先" %>
  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
  <%= f.submit '確認画面へ進む' %>
<% end %>