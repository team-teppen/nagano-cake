<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-borderless">
        <thead class="table-secondary">
          <div class="bg-light text-dark text-center" style="margin-top: 30px; margin-bottom: 30px; width: 20%"><strong>注文履歴一覧</strong></div>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= order.postal_code %>
              <%= order.address %>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %>
              <% end %>
            </td>
            <td>
              <%= order.total_payment + order.shipping_cost %>
            </td>
            <td><%= order.status_i18n %></td>
            <td>
              <%= link_to '表示する', order_path(order.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>