<table>
<thead>
  <h2>ショッピングカート</h2>
  <tr>
    <th></th>
    <th>商品名</th>
    <th>単価</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
</thead>
<tbody>

  <%= link_to 'カート内を空にする', url: all_destroy_cart_items_path, method: :delete %>

  <% @cart_items.each do |cart_item| %>
  <tr>
    <td>[id <%= cart_item.id %>]</td>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price %></td>
    <td>
      <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :post do |f| %>
        <%= f.select :amount, *[1..10], include_blank: cart_item.amount %>
        <%= f.submit '変更' %>
      <% end %>
    </td>
    <td><%= cart_item.subtotal %></td>
    <td><%= link_to '削除する', url: cart_item_path(cart_item.id), method: :delete %></td>
    <% @total +=  cart_item.subtotal %>
  </tr>
  <% end %>
合計金額<%= @total %>
</tbody>
</table>