<h1>商品詳細</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.image, size: "350x300" %>
    </div>
    <div class="col-lg-8">
    <table>
      <tbody>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
         <th>ジャンル</th>
         <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>
            税込価格<br>
            (税抜価格)
          </th>
          <td><%= @item.with_tax_price.to_s(:dalimited) %><%= "(#{@item.price})" %>円</td>
          
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == false %>
              <p class="text-muted ">販売停止中</p>
            <% else %>
              <p class="text-danger font-weight-bold">販売中</p>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-outline-success" %>
    </div>
  </div>
</div>