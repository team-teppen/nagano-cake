<div class="container">
  <p class="mt-5" style="font-size: 25px">商品詳細</p>
  <div class="row">
    <div class="col-lg-4 mt-5 pt-3">
      <%= image_tag @item.image, size: "250x160" %>
    </div>
    <div class="col-lg-4">
    <table class="table mt-5 pt-3">
      <tbody>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
         <th>ジャンル</th>
         <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>
            税込価格<br>
            (税抜価格)
          </th>
          <td><%= @item.with_tax_price.to_s(:dalimited) %><%= "(#{@item.price})" %>円</td>

        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == false %>
              <p class="text-muted ">販売停止中</p>
            <% else %>
              <p class="text-success font-weight-bold">販売中</p>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
     <div class="pl-5">
       <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success d-grid gap-2 d-md-block" %>
     </div>
    </div>
  </div>
</div>