<div class="container">
  
<h2 class="font-weight-bold pt-5">商品一覧</h2>
<div class="text-right"><%= link_to "+", new_admin_item_path, class: "btn btn-primary rounded-pill" %></div>

<div class="row">
  <table class='table table-hover table-inverse mx-auto'>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == false %>
            <p class="text-muted ">販売停止中</p>
          <% else %>
            <p class="text-danger font-weight-bold">販売中</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="center-block"><%= paginate @items %></div>


