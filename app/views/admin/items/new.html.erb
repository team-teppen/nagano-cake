<div class="container">
  <div Class="mx-auto mt-5 mb-5">
    <div class="row">
      <div class="col">
        <h1 class="text-center">商品新規登録</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div Class="mx-auto">
      <div class="col">

        <% if @item.errors.any? %>
          <%= @item.errors.count %>件のエラーが発生しました
          <ul>
            <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model:Item.new, url: admin_items_path, method: :post do |f| %>
        <div>
        <table class="new-form-table">
          <tbody>
            <tr>
              <th><%= f.label :商品画像 %></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th><%= f.label :商品名 %></th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th><%= f.label :商品説明 %></th>
              <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
              <th><%= f.label :ジャンル %></th>
              <td><%= f.collection_select(:genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--") %></td>
            </tr>
            <tr>
              <th><%= f.label :税抜価格 %></th>
              <td><%= f.text_field :price %>円</td>
            </tr>
            <tr>
              <th><%= f.label :販売ステータス %></th>
              <td>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中", {value: :販売中, style: "display: inline-block;"} %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売停止中", {value: :販売停止中, style: "display: inline-block;"} %>
              </td>
            </tr>
            </tbody>
         </table>
         </div>
          <div class="row">
            <div class="mx-auto">
            <div class="col">
              <%= f.submit '新規登録', class: "btn btn-success mx-auto" %>
             <% end %>
           </div>
           </div>
         </div>
      </div>
    </div>
  </div>
</div>