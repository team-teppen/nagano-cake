<h1>商品新規登録</h1>
<table>
  <%= form_with model:Item.new, url: admin_items_path, method: :post do |f| %>
  <table class="new-form-table">
    <tbody>
      <tr>
        <th><%= f.label :商品画像 %></th>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <th><%= f.label :商品名 %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :商品説明 %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th><%= f.label :ジャンル %></th>
        <td><%= f.collection_select(:genre_id, @genres ,:id, :name, include_blank: "--選択してください--") %></td>
      </tr>
      <tr>
        <th><%= f.label :税抜価格 %></th>
        <td><%= f.text_field :price %>円</td>
      </tr>
      <tr>
        <th><%= f.label :販売ステータス %></th>
        <td>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="form-group">
    <%= f.submit '新規登録' %>
  </div>
   <% end %>

