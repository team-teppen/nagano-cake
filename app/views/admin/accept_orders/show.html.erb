<h1>注文履歴詳細</h1>
  <table class="row pl-5">
    <tbody class="col-12">
      <tr>
        <th>購入者</th>
        <td>
          <%= @order.customer.last_name %>
          <%= @order.customer.first_name %>
        </td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: @order, url: admin_accept_order_path(@order), method: :patch, local: true do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert %>
          <%= f.submit "更新", class:'btn btn-info' %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  
<div class="row pl-5">
  <table class="col-6">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= (order_detail.price * 1.1).floor %></td>
        <td><%= order_detail.amount%></td>
        <td><%= (order_detail.price * 1.1).floor * order_detail.amount %></td>
        
        <%= form_with model: order_detail, url: admin_accept_order_detail_path(order_detail), method: :patch, local: true do |f| %>
        <td><%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %></td>
        <td><%= f.submit "更新", class: "btn btn-success" %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <table class="col-2">
    <tbody>
      <tr>
        <th>商品合計</th>
        <td><%= @total %></td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td><%= @total + @order.shipping_cost %></td>
      </tr>
    </tbody>
  </table>
</div>
